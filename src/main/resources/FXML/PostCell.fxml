      <VBox styleClass="Body_container" BorderPane.alignment="CENTER">
         <ImageView fx:id="post_image" fitHeight="384.0" fitWidth="440.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
               <Insets left="130.0" />
            </VBox.margin>
            <Image url="@../Images/postimage.jpg" />
         </ImageView>
         <Label fx:id="post_text_lbl" prefHeight="73.0" prefWidth="492.0" text="Add the Text of the Post here " />
